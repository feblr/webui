{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "ES6",
    "watch": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
   "compileOnSave": true
}
